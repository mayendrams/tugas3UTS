<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/header_profile"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".listMusic">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="casual"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:orientation="vertical"
        app:cardCornerRadius="20dp"
        android:elevation="20dp"
        android:background="@drawable/bg_lis_daily"
        android:backgroundTint="#2F9B8F" >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="casual"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:orientation="vertical"



            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:text="Nama Musik"
                android:textSize="18sp"
                android:id="@+id/judulmusik"
                android:layout_marginTop="5dp"
                android:textColor="@android:color/white"

                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"


                >
                <ImageView
                    android:layout_marginTop="10dp"
                    android:text="play"
                    android:layout_width="100dp"
                    android:layout_height="80dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginStart="16dp"


                    android:src="@drawable/musicplayer"

                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:layout_gravity="right"
                    android:gravity="right"
                    >
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:text="play"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:id="@+id/play"
                        android:src="@drawable/playbutton1"
                        android:visibility="visible"
                        android:layout_marginBottom="74dp"

                        />
                    <ImageView
                        android:layout_marginTop="10dp"
                        android:text="play"

                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:id="@+id/buttonpause"
                        android:src="@drawable/pause1"
                        android:visibility="gone"
                        android:layout_marginBottom="74dp"
                        />
                    <ImageView
                        android:layout_marginTop="10dp"


                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:id="@+id/lanjut"
                        android:src="@drawable/playbutton1"
                        android:visibility="gone"
                        android:layout_marginBottom="74dp"
                        />

                    <ImageView
                        android:layout_marginTop="10dp"


                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:id="@+id/stop"
                        android:src="@drawable/stop"

                        android:layout_marginBottom="74dp"
                        />
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>
